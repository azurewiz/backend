pipeline {
    agent any

    tools {
        maven 'Maven' // Uses configured Maven installation
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/azurewiz/backend.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    echo 'Building project...'
                    bat 'mvn clean package'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    echo 'Running Tests...'
                    bat 'mvn test'
                }
            }
        }

        stage('Deploy Locally') {
            steps {
                script {
                    echo 'Deploying application...'
                    bat 'java -jar target/your-app.jar &'
                }
            }
        }
    }
}
